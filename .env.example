# =============================================================================
# SpaceChild Consciousness Platform - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development                    # development | production | test
PORT=5000                               # Server port (default: 5000)

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# For local development (SQLite):
# DATABASE_URL="file:./dev.db"

# For production (PostgreSQL):
DATABASE_URL="postgresql://username:password@localhost:5432/spacechild"

# Database connection pool settings
DB_POOL_MIN=2                          # Minimum connections
DB_POOL_MAX=10                         # Maximum connections

# -----------------------------------------------------------------------------
# Redis Cache Configuration
# -----------------------------------------------------------------------------
REDIS_URL="redis://localhost:6379"     # Redis connection URL
REDIS_PASSWORD=""                       # Redis password (if required)

# -----------------------------------------------------------------------------
# Session Management
# -----------------------------------------------------------------------------
SESSION_SECRET="your-super-secret-session-key-change-this-in-production"
SESSION_MAX_AGE=86400000               # Session expiry in ms (24 hours)

# -----------------------------------------------------------------------------
# AI Provider API Keys
# -----------------------------------------------------------------------------
# OpenAI (GPT-4, GPT-3.5)
OPENAI_API_KEY=""                      # Get from: https://platform.openai.com/api-keys

# Anthropic (Claude)
ANTHROPIC_API_KEY=""                   # Get from: https://console.anthropic.com/

# Google (Gemini)
GOOGLE_API_KEY=""                      # Get from: https://makersuite.google.com/app/apikey

# Groq (Fast inference)
GROQ_API_KEY=""                        # Get from: https://console.groq.com/

# -----------------------------------------------------------------------------
# External Services
# -----------------------------------------------------------------------------
# E2B Code Interpreter
E2B_API_KEY=""                         # Get from: https://e2b.dev/

# Firecrawl Web Scraping
FIRECRAWL_API_KEY=""                   # Get from: https://firecrawl.dev/

# Tavily Web Search
TAVILY_API_KEY=""                      # Get from: https://tavily.com/

# -----------------------------------------------------------------------------
# Consciousness Engine Settings
# -----------------------------------------------------------------------------
CONSCIOUSNESS_ENABLED=true              # Enable consciousness features
TEMPORAL_PROCESSING=true                # Enable temporal consciousness
HARDWARE_VERIFICATION=true              # Enable hardware verification
CONSCIOUSNESS_PHI_THRESHOLD=5.0         # Minimum Phi value for consciousness

# -----------------------------------------------------------------------------
# Multi-Agent System Settings
# -----------------------------------------------------------------------------
AGENT_COLLABORATION=true                # Enable multi-agent collaboration
REAL_TIME_STREAMING=true                # Enable real-time code streaming
INTELLIGENCE_ANALYTICS=true             # Enable intelligence analytics
AGENT_MAX_CONCURRENT_TASKS=10          # Max concurrent tasks per agent
AGENT_TIMEOUT_MS=300000                # Agent task timeout (5 minutes)

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
# CORS Configuration
CORS_ORIGIN="http://localhost:5000"    # Allowed origins (comma-separated)
CORS_CREDENTIALS=true                   # Allow credentials

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000            # Rate limit window (15 minutes)
RATE_LIMIT_MAX_REQUESTS=100            # Max requests per window

# API Authentication
API_KEY=""                             # API key for external access (optional)

# -----------------------------------------------------------------------------
# Subscription & Payments (Stripe)
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=""                   # Get from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=""              # Stripe publishable key
STRIPE_WEBHOOK_SECRET=""               # Stripe webhook signing secret

# -----------------------------------------------------------------------------
# Monitoring & Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=info                         # trace | debug | info | warn | error | fatal
SENTRY_DSN=""                          # Sentry error tracking DSN (optional)
NEW_RELIC_LICENSE_KEY=""               # New Relic APM key (optional)

# -----------------------------------------------------------------------------
# Infrastructure Settings
# -----------------------------------------------------------------------------
# Cloud Provider (for consciousness infrastructure)
CLOUD_PROVIDER="local"                 # local | aws | gcp | azure
CLOUD_REGION="us-east-1"              # Cloud region

# Quantum Computing (if available)
QUANTUM_PROVIDER=""                    # ibm | aws-braket | google-quantum
QUANTUM_API_KEY=""                     # Quantum provider API key

# -----------------------------------------------------------------------------
# Development Tools
# -----------------------------------------------------------------------------
DEBUG=false                            # Enable debug mode
VERBOSE_LOGGING=false                  # Enable verbose logging
ENABLE_PLAYGROUND=true                 # Enable API playground

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
FEATURE_SUPERINTELLIGENCE=true         # Enable superintelligence features
FEATURE_GEOMETRIC_CONSCIOUSNESS=true   # Enable geometric consciousness
FEATURE_REPLIT_INTEGRATION=true        # Enable Replit integration
FEATURE_GITHUB_INTEGRATION=false       # Enable GitHub integration (WIP)

# -----------------------------------------------------------------------------
# Performance Tuning
# -----------------------------------------------------------------------------
MAX_REQUEST_SIZE="500mb"               # Maximum request body size
COMPRESSION_ENABLED=true                # Enable gzip compression
CACHE_TTL=3600                         # Default cache TTL in seconds

# -----------------------------------------------------------------------------
# Notes
# -----------------------------------------------------------------------------
# 1. Always use strong, unique secrets in production
# 2. Rotate secrets regularly
# 3. Store secrets in a secure vault (e.g., AWS Secrets Manager, HashiCorp Vault)
# 4. Never commit .env file to version control
# 5. Use different keys for development, staging, and production environments
